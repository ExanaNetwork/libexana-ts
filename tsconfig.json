{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": false,
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
